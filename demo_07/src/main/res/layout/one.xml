<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/s_id"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品编号"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/s_code"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/s_id"
                    android:layout_toEndOf="@+id/s_id" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/s_name"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/s_code"
                    android:layout_toEndOf="@+id/s_code" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/s_number"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/s_name"
                    android:layout_toEndOf="@+id/s_name" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/s_price"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/s_number"
                    android:layout_toEndOf="@+id/s_number" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>